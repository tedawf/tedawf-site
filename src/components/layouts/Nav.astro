---
import { Icon } from "astro-icon/components";

const navData = [
  {
    title: "Home",
    href: "/",
    icon: "logo",
  },
  {
    title: "Projects",
    href: "/projects",
  },
  {
    title: "Blog",
    href: "/blog",
  },
];
---

<nav>
  <ul class="flex items-center justify-start gap-8">
    {
      navData.map((i) => (
        <li>
          <a href={i.href} aria-label={i.icon && i.title}>
            {i.icon && <Icon name={i.icon} size={40} aria-hidden="true" />}
            {!i.icon && i.title}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
