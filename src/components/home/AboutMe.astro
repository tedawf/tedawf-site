---
import { Icon } from "astro-icon/components";
import { getCollection } from "astro:content";
import Heading from "../ui/Heading.astro";

const points = await getCollection("points");
---

<section aria-label="About Me" class="">
  <div>
    <Heading tagName="h2" size="h2"> Let me build something for you. </Heading>
    <ul class="flex gap-8">
      {
        points.map(({ data }) => (
          <li>
            <Icon name={data.icon} size={64} />
            <Heading tagName="h3" size="h3">
              {data.title}
            </Heading>
            <p>{data.description}</p>
          </li>
        ))
      }
    </ul>
  </div>
</section>
